{
  "reportId": "balance_sheet_default",
  "name": "Balans (Default)",
  "version": "1.0.0",
  "statementType": "balance",
  "description": "Default Dutch balance sheet following local GAAP - matches hardcoded report structure",
  
  "variables": {
    "fixed_assets": {
      "filter": { "code1": "10" },
      "aggregate": "sum",
      "description": "Vaste activa (Fixed Assets)"
    },
    "intangible_assets": {
      "filter": { "code1": "20" },
      "aggregate": "sum",
      "description": "Immateriële vaste activa (Intangible Assets)"
    },
    "inventory": {
      "filter": { "code1": "30" },
      "aggregate": "sum",
      "description": "Voorraden (Inventory)"
    },
    "receivables": {
      "filter": { "code1": "40" },
      "aggregate": "sum",
      "description": "Vorderingen (Receivables)"
    },
    "cash": {
      "filter": { "code1": "50" },
      "aggregate": "sum",
      "description": "Liquide middelen (Cash and Cash Equivalents)"
    },
    "equity": {
      "filter": { "code1": "60" },
      "aggregate": "sum",
      "description": "Eigen vermogen (Equity)"
    },
    "long_term_liabilities": {
      "filter": { "code1": "70" },
      "aggregate": "sum",
      "description": "Langlopende schulden (Long-term Liabilities)"
    },
    "short_term_liabilities": {
      "filter": { "code1": "80" },
      "aggregate": "sum",
      "description": "Kortlopende schulden (Short-term Liabilities)"
    },
    "accruals": {
      "filter": { "code1": "90" },
      "aggregate": "sum",
      "description": "Overlopende passiva (Accruals and Deferred Income)"
    }
  },
  
  "layout": [
    {
      "order": 100,
      "label": "ACTIVA",
      "type": "spacer",
      "style": "metric",
      "indent": 0,
      "_comment": "Assets section header"
    },
    {
      "order": 200,
      "label": "Vaste activa",
      "type": "variable",
      "variable": "fixed_assets",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Fixed Assets - code1=10"
    },
    {
      "order": 300,
      "label": "Immateriële vaste activa",
      "type": "variable",
      "variable": "intangible_assets",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Intangible Assets - code1=20"
    },
    {
      "order": 400,
      "label": "Voorraden",
      "type": "variable",
      "variable": "inventory",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Inventory - code1=30"
    },
    {
      "order": 500,
      "label": "Vorderingen",
      "type": "variable",
      "variable": "receivables",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Receivables - code1=40"
    },
    {
      "order": 600,
      "label": "Liquide middelen",
      "type": "variable",
      "variable": "cash",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Cash and Cash Equivalents - code1=50"
    },
    {
      "order": 700,
      "label": "Totaal activa",
      "type": "subtotal",
      "from": 200,
      "to": 600,
      "format": "currency",
      "style": "total",
      "indent": 0,
      "_comment": "Total Assets = sum of all asset categories"
    },
    {
      "order": 710,
      "type": "spacer",
      "_comment": "Blank row between assets and liabilities"
    },
    {
      "order": 800,
      "label": "PASSIVA",
      "type": "spacer",
      "style": "metric",
      "indent": 0,
      "_comment": "Liabilities and Equity section header"
    },
    {
      "order": 900,
      "label": "Eigen vermogen",
      "type": "variable",
      "variable": "equity",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Equity - code1=60"
    },
    {
      "order": 1000,
      "label": "Langlopende schulden",
      "type": "variable",
      "variable": "long_term_liabilities",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Long-term Liabilities - code1=70"
    },
    {
      "order": 1100,
      "label": "Kortlopende schulden",
      "type": "variable",
      "variable": "short_term_liabilities",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Short-term Liabilities - code1=80"
    },
    {
      "order": 1200,
      "label": "Overlopende passiva",
      "type": "variable",
      "variable": "accruals",
      "format": "currency",
      "indent": 1,
      "style": "normal",
      "_comment": "Accruals and Deferred Income - code1=90"
    },
    {
      "order": 1300,
      "label": "Totaal passiva",
      "type": "subtotal",
      "from": 900,
      "to": 1200,
      "format": "currency",
      "style": "total",
      "indent": 0,
      "_comment": "Total Liabilities and Equity = sum of all L&E categories (Note: Net Income added separately by renderer)"
    }
  ],
  
  "formatting": {
    "currency": {
      "decimals": 0,
      "thousands": true,
      "symbol": "€"
    },
    "percent": {
      "decimals": 1,
      "symbol": "%"
    },
    "integer": {
      "thousands": true
    },
    "decimal": {
      "decimals": 2,
      "thousands": true
    }
  },
  
  "metadata": {
    "author": "System",
