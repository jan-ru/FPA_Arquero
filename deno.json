{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "imports": {
    "arquero": "npm:arquero@5.4.1",
    "fast-check": "npm:fast-check@3.15.0",
    "loglevel": "npm:loglevel@1.9.1"
  },
  "lint": {
    "files": {
      "include": ["src/", "test/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "test/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "include": ["test/"]
  },
  "tasks": {
    "dev": "deno run --allow-all server.ts",
    "test": "deno test --allow-read --allow-write test/unit/",
    "test:watch": "deno test --allow-read --allow-write --watch test/unit/",
    "test:coverage": "deno test --allow-read --allow-write --coverage=coverage test/unit/",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint src/ test/",
    "fmt": "deno fmt src/ test/",
    "fmt:check": "deno fmt --check src/ test/",
    "ci": "deno fmt --check src/ test/ && deno lint src/ test/ && deno check src/**/*.ts && deno test --allow-read --allow-write test/unit/"
  }
}
